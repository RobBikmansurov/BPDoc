-title 'Значения метрики ' + @metric.name + '. ' + @metric.bproce.shortname if @metric.bproce
-search "Метрику"
.id_
  \#
  =@metric.id
%h2
  [
  =@metric.shortname
  ]
  =@metric.name

-#= link_to 'Год', metric_path({type: :year})     #, remote: true
-#= link_to 'Месяцы года', metric_path({type: :month})   #, remote: true
-#= link_to 'Дни месяца', metric_path({type: :day})     #, remote: true

%h3
  -if @metric.bproce
    =link_to 'Метрика', bproce_path(@metric.bproce) + '/metrics' 
  -else
    =link_to 'Метрики', metrics_path
  процесса
  = link_to @metric.bproce.name, bproce_path(@metric.bproce) if @metric.bproce

= @metric.description
-if @metric.note.presence
  %br
  = '[' + @metric.note.to_s + ']'
%br
%h3 Значения метрики:
- @values.each do |value|
  =value.dtime.strftime(@datetime_format)
  =value.value
  %br

= link_to "< " + @prev_period_date.strftime('%b %Y'), metric_path({month: @prev_period_date.strftime('%Y-%m-01')}) if @prev_period_date
= link_to @next_period_date.strftime('%b %Y') + ' >', metric_path({month: @next_period_date.strftime('%Y-%m-01')}) if @next_period_date

%p
= link_to 'Show', @metric, :class => 'button'
= link_to 'Back', metrics_path, :class => 'button'

