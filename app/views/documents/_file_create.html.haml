= simple_form_for @document, :url => update_file_document_path, :html => { :multipart => true } do |f|
  = f.error_notification
  -#= f.hidden_field :document_id
  = f.input :document_file, hint: 'Выберите файл с документом для загрузки'

  = f.error :base
  -if can? :update, @document
    %p
    = f.button :submit, 'Сохранить файл'
