= form_for(@document) do |f|
  -if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Наименование'
    = f.text_field :name
  .field
    = f.label 'Описание'
    = f.text_field :description
  .field
    = f.label 'Имя файла'
    = f.text_field :filename
  .field
    = f.label 'Статус документа'
    = f.text_field :status
  .field
    = f.label :status_id, "Choose your status:"
    = f.collection_select :status_id, Category.all, :id, :name,:prompt => ""
  .field
    = f.label 'Раздел'
    = f.text_field :part
  .field
    = f.label 'Дата'
    = f.text_field :approved
  .field
    = f.label 'Место хранения'
    = f.text_field :place

  .actions
    = f.submit 'Сохранить'
