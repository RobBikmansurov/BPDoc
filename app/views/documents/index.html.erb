<h1>Listing documents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Filename</th>
    <th>Description</th>
    <th>Status</th>
    <th>Part</th>
    <th>Approved</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.name %></td>
    <td><%= document.filename %></td>
    <td><%= document.description %></td>
    <td><%= document.status %></td>
    <td><%= document.part %></td>
    <td><%= document.approved %></td>
    <td><%= document.place %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

