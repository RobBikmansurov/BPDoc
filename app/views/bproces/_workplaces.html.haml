-@bproce.bproce_workplaces.each do | bpwp |	#  список рабочих мест процесса
  -#= bpwp.inspect
  = link_to bpwp.workplace.designation, workplace_path(bpwp.workplace)
  = link_to image_tag('action_stop.gif', :alt => 'Удалить'), bpwp, confirm: "Действительно хотите исключить [" + bpwp.workplace.designation + "] из процесса:\n" + @bproce.name + "?", :method => 'delete'


= simple_form_for(@bproce_workplace) do | bproce_workplace |
  = bproce_workplace.error_notification
  = bproce_workplace.hidden_field :bproce_id
  = bproce_workplace.input :workplace_designation, data: {autocomplete_source: autocomplete_workplaces_path}, :as => :autocomplete, :label => 'Рабочее место', :prompt => 'Рабочее место'
  = bproce_workplace.error :base
  %p
  -if can? :update, @bproce
    = bproce_workplace.button :submit

