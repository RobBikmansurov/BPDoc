= form_for(@bproce) do |f|
  -if @bproce.errors.any?
    #error_explanation
      %h2 "#{pluralize(@bproce.errors.count, "error")} prohibited from being saved:"
      %ul
        -@bproce.errors.full_messages.each do |msg|
          %li= msg

  .fieldset
    .field
      = f.label :shortname
      = f.text_field :shortname
    .field
      = f.label :name
      .text
      = f.text_field :name, :size => "50"
    .field
      = f.label :fullname
      .text
      = f.text_area :fullname
    .field
      = f.label :goal
      .text
      = f.text_area :goal

  %table
    %tr
      %th В процессе участвуют Роли:
      %th Процесс описывают Документы:
    %tr
      %td
        -@bproce.roles.find_with_associations.each do |role|
          = link_to role.name, edit_role_path(role)
          %br
      %td
        -@bproce.documents.find_with_associations.each do |doc|
          = link_to doc.name, edit_document_path(doc)
          %br

  %p
  .actions
    = f.submit 
