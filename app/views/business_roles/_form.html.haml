= simple_form_for(@business_role) do |f|
  = f.error_notification
  = f.input :name
  = f.input :description, :as => :text
  = f.association :bproce, :collection => Bproce.all(:order => 'name'), :label => 'Участвует в процессе', :include_blank => false, :prompt => 'Выберите процесс, в котором участвует Роль'
  -if @business_role.bproce_id?
    Перейти к процессу
    = link_to @business_role.bproce.name, bproce_path(@business_role.bproce)
  -if current_user.role? :admin
    = f.input :features, :as => :text
  = f.error :base
  -if can? :update, @business_role
    = f.button :submit
