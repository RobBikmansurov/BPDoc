-if @bproce_contract
  = simple_form_for(@bproce_contract) do |ff|
    = ff.error_notification
    = ff.hidden_field :contract_id
    = ff.hidden_field :bproce_id
    .field.is-horizontal
      .field-label
        %label.label Процесс: 
      .field-body
        .field
          %p.control
            %input.input{"data-autocomplete" => autocomplete_bproces_path, :name => "bproce_contract[bproce_name]", :type => "text", :placeholder => "процесс"}/
      .field-label
        %label.label назначение: 
      .field-body
        .field
          .control
            %input.input{name: "bproce_contract[purpose]", type: "text", placeholder: 'назначение Договора в процессе' }
          -# = bp.input :purpose

      -if can? :update, @contract
        .control
          %button.button.is-link 'Связать с процессом'
