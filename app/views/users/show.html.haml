%h1 
  = @usr.displayname
  = @usr.position  
%p
= @usr.email
= @usr.department
= @usr.office
= @usr.phone

%h2 Рабочие места:
%table
  %tr
    %th Рабочее место
    %th Расположение
    %th Описание
    %th
    %th

  -@uworkplaces.each do |user_workplace|
    %tr
      %td= link_to user_workplace.workplace.designation, edit_workplace_path(user_workplace.workplace)
      %td= user_workplace.workplace.location
      %td= user_workplace.workplace.name
      %td= user_workplace.note
      %td= user_workplace.date_from
      %td= user_workplace.date_to

%h2
  = @usr.displayname
  исполняет роли:
%table
  %tr
    %th Роль
    %th
    %th с
    %th по
  - @uroles.each do |user_role|
    %tr
      %td= link_to user_role.role.name, edit_role_path(user_role.role)
      %td= user_role.note
      %td= user_role.date_from
      %td= user_role.date_to

= link_to 'Back', users_path
