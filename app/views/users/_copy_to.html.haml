= simple_form_for @new_user, url: business_roles_copy_to_user_path, html: { validate: true } do |f|
  = f.error_notification
  -# = f.hidden_field :old_user_id
  = f.label 'Со-исполнитель'
  = f.autocomplete_field :user_name, autocomplete_users_path, placeholder: 'выберите ФИО со-исполнителя', validate: { presence: true }
  = f.error :base
  = f.button :submit, 'Со-исполнитель'
