%h1 Список сотрудников

%table
  %tr
    %th= sortable "displayname", "ФИО"
    %th= sortable "email", "Почта"
    %th= sortable "phone", "Телефон"
    %th Должность
    %th Офис
    - if can? :destroy, User
      %th Роли доступа
  

  -@users.each do |user|
    %tr
      %td= link_to user.displayname, user
      %td= mail_to user.email, user.email, :subject => "BP1Step"
      %td= user.phone
      %td= user.position
      %td= user.office
      - if can? :destroy, user
        %td
          -user.roles.each do |role|
            = role.name

.apple_pagination
  = will_paginate @users 

