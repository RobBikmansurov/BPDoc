-title "Список сотрудников"
%h1 Список сотрудников

%table
  %tr
    %th= sortable "displayname", "ФИО"
    %th= sortable "email", "Почта"
    %th= sortable "phone", "Телефон"
    %th Должность
    %th Офис
    -if current_user != nil
      -if current_user.role? :admin
        %th Login (ip)
        %th Last login
    - if can? :destroy, User
      %th Роли доступа
  

  -@users.each do |user|
    %tr
      %td= link_to user.displayname, user
      %td= mail_to user.email, user.email, :subject => "BP1Step"
      %td= user.phone
      %td= user.position
      %td= user.office
      -if current_user != nil
        -if current_user.role? :admin
          %td
            = user.current_sign_in_at
            (
            = user.current_sign_in_ip
            )
          %td= user.last_sign_in_at
      - if can? :destroy, user
        %td
          -user.roles.each do |role|
            = role.name

.apple_pagination
  = will_paginate @users 

