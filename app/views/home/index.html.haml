- if user_signed_in?
  %h1
    = current_user.displayname
  %h4
    = current_user.position
    |
    = current_user.email
  %table
    %tr
      %th Рабочее место
      %th Расположение
      %th Описание
      %th Основание
      %th
    -current_user.user_workplace.each do |user_workplace|
      %tr
        %td= link_to user_workplace.workplace.designation, edit_workplace_path(user_workplace.workplace)
        %td= user_workplace.workplace.location
        %td= user_workplace.workplace.name
        %td= user_workplace.note
        %td
          = user_workplace.date_from
          = user_workplace.date_to
  %table
    %tr
      %th Исполняет Роли
      %th
      %th
    - current_user.user_business_role.each do |user_business_role|
      %tr
        %td= link_to user_business_role.business_role.name, edit_business_role_path(user_business_role.business_role)
        %td= user_business_role.note
        %td
          = user_business_role.date_from
          = user_business_role.date_to
- else
  %h1 Бизнес-процессы: Первый шаг

%p
%hr
%h3
  = link_to "Процессы:", bproces_path
  = Bproce.count
%h3
  = link_to "Роли", business_roles_path
  = BusinessRole.count
%h3
  = link_to "Рабочие места", workplaces_path
  = Workplace.count
%h3
  = link_to "Приложения", bapps_path
  = Bapp.count
%h3
  = link_to "Документы", documents_path
  = Document.count
%h3
  = link_to "Сотрудники", users_path
  = User.count

%p
