-title "Каталог Приложений"
-if @bp.nil?
  %h1
    Каталог Приложений
    -if params[:search].present?
      [ 
      = params[:search]
      ]
-else
  %h2
    Приложения процесса
    = link_to @bp.name, bproce_path(@bp)
%table
  %tr
    %th= sortable "name", "Наименование"
    %th= sortable "description", "Описание"
    -if !@bp.nil?
      %th Назначение в процессе
    -if can? :destroy, Bapp
      %th
    -if can? :manage, Bapp
      %th
  
  -if @bp.nil?
    -@bapps.each do |bapp|
      %tr
        %td= link_to bapp.name, bapp
        %td= bapp.description
        - if can? :manage, bapp
          %td= link_to image_tag('page_edit.gif', :alt => 'Изменить'), edit_bapp_path(bapp), class: 'button-img'
        -if can? :destroy, bapp
          %td= link_to image_tag('action_stop.gif', :alt => 'Удалить'), bapp, confirm: bapp.name + "\nДействительно хотите удалить?", :method => 'delete', class: 'button-img'
  -else
    -@bproce_bapps.each do |ba|
      %tr
        -if ba.bapp
          %td= link_to ba.bapp.name, ba.bapp
          %td= ba.bapp.description
          %td= ba.apurpose
          - if can? :manage, ba.bapp
            %td= link_to image_tag('page_edit.gif', :alt => 'Изменить'), edit_bapp_path(ba), class: 'button-img'
          - if can? :destroy, ba.bapp
            %td= link_to image_tag('action_stop.gif', :alt => 'Удалить'), ba, confirm: 'Приложение: ' + ba.bapp.name + "\nДействительно хотите исключить его из процесса?", :method => 'delete', class: 'button-img'
        -else
          %td{:colspan => 3}
            =ba.inspect

-if !params[:all].present?
  .apple_pagination
    -if @bp.nil?
      = will_paginate @bapps
    -else
      = will_paginate @bproce_bapps

-if @bp.nil?
  - if can? :destroy, Bapp
    = link_to 'Каталог', bapps_path + '.pdf?all=1', :class => 'button'
    = link_to 'ODT', bapps_path + '.pdf', :class => 'button'
    = link_to "Добавить новое приложение" , new_bapp_path, :class => 'button'
-else
  - if can? :destroy, Bapp
    = link_to "Добавить новое приложение в процесс" , new_bproce_bapp_path, :class => 'button'

%p
%br
Тип:
- Bapp.group(:apptype).each do |bapp|
  -if bapp.apptype.to_s.empty?
    = link_to 'пусто', bapps_path + '?apptype='
  -else
    = link_to bapp.apptype, bapps_path + '?apptype=' + bapp.apptype.to_s