= form_for @category do |f|
  -if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :cat_table
    = f.text_field :cat_table
  .field
    = f.label :cat_type
    = f.text_field :cat_type
  .field
    = f.label :cat_name
    = f.text_field :cat_name
  .field
    = f.label :sortorder
    = f.number_field :sortorder
  .actions
    = f.submit 'Save'
